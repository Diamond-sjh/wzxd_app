}
.userinfo-list .userinfo-item {
	height: 80rpx;
	line-height: 80rpx;
	margin: 0 10px;
	border-bottom: 1px solid #bfbfbf;
}
.userinfo-list .userinfo-item .iconfont:before {
	margin-left: 10px;
	margin-right: 10px;
}
.userinfo-list .userinfo-item .iconfont.icon-right {
	float: right;
}
.logout-btn {
	position: absolute;
	bottom: 10px;
	width: calc(100% - 20px);
	background-color: #918e8e;
	margin: 0 10px;
}

