
.content {
		background: #377EB4;
		width: 100vw;
		height: 100vh;
}
.avatorWrapper{
		height: 30vh;
		width: 100vw;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		-webkit-box-align: end;
		-webkit-align-items: flex-end;
		        align-items: flex-end;
}
.avator{
		width: 200rpx;
		height: 200rpx;
		overflow: hidden;
}
.avator .img{
		width: 100%
}
.form{
		padding: 0 100rpx;
		margin-top: 80px;
}
.inputWrapper{
		width: 100%;
		height: 80rpx;
		background: white;
		-webkit-border-radius: 20px;
		        border-radius: 20px;
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
		padding: 0 20px;
		margin-top: 25px;
}
.inputWrapper .input{
		width: 100%;
		height: 100%;
		text-align: center;
		font-size: 15px;
}
